extends layout.pug

include utils.pug

block content
    div.container__add-to-shelf
        table
            thead
                th #{userToDisplay.username}'s Shelves
                th Want to Add Plants To A Shelf?
            tbody
                each shelf in shelves
                    tr
                        td.flex-container__center-center
                            a(href=`../../shelves/${shelf.id}` class="clickable-link") #{shelf.name}
                        td
                            div.flex-container__center-x
                                a(href="../../plants" class="add-plants-link") Add Plants
        p
        p
        form(action='/shelves' method='post' class='user-id-shelf-form-1')
            input(type='hidden' name='_csrf' value=csrfToken)
            input(type='hidden' id='userId' name='userId' value=`${loggedInUser.id}`)
            label(for='name') Add a Shelf
            div(class='user-id-shelf-form')
                input(name='name' id='name' placeholder='Shelf Name' required)
            div(class='user-id-shelf-form')
                button(type='submit') Add New Shelf
